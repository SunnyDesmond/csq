page {
  background-color: #f5f5f5;
}

.banner {
  position: relative;
  height: 300rpx;
}

.banner image {
  width: 100%;
  position: relative;
  height: 300rpx;
}

.banner .greetings {
  position: absolute;
  top: 28rpx;
  left: 64rpx;
  width: 100%;
  color: #fff;
}

.banner .greetings .date {
  font-size: 40rpx;
  display: block;
  margin-top: 20rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.banner .greetings .con {
  font-size: 36rpx;
  display: block;
  font-weight: bold
}

.user-info {
  position: relative;
  background-color: #fff;
  padding-bottom: 30rpx;
}

.user-info .avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  top: -70rpx;
  position: absolute;
  left: 50%;
  transform: translate(-50%, 0);
}

.user-info .user-name {
  position: absolute;
  font-size: 34rpx;
  color: #333;
  left: 50%;
  top: 90rpx;
  transform: translate(-50%, 0);
  display: block;
  line-height: 34rpx;
}

.user-info .info {
  display: flex;
  padding-top: 152rpx;
  justify-content: space-around;
}

.user-info .info .item text {
  display: block;
  min-width: 155rpx;
  text-align: center;
}

.user-info .info .item .title {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 15rpx;
}

.user-info .info .item .num {
  font-size: 34rpx;
  color: #393939;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.user-info .donate-btn {
  width: 680rpx;
  height: 90rpx;
  border-radius: 45rpx;
  background-color: #f8592d;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  line-height: 90rpx;
  margin: 50rpx auto 0;
}


.record-list{
  margin-top: 20rpx;
  background-color: #fff;
  padding-top: 32rpx;
}
.record-list .list-title{
  font-size: 32rpx;
  color: #393939;
  border-left: 6rpx solid #f8592d;
  height: 30rpx;
  line-height: 30rpx;
  padding:0 32rpx;
}
.record-list .list-con{
  padding: 32rpx 0;
}
.record-list .list-con .list{
  padding-left: 40rpx;
  padding-right: 28rpx;
  font-size: 22rpx;
  color: #888;
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}
.record-list .list-con .list:last-child{
  margin-bottom: 0;
}

.layer-wrap {
  position: absolute;
  height: 100%;
  width: 100%;
  top: 0;
}

.layer-wrap .layer {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 998;
}

.layer-wrap .sel-box {
  position: fixed;
  width: 100%;
  background-color: #fff;
  bottom: 0;
  left: 0;
  z-index: 1000;
}

.layer-wrap .sel-box .sel-panel {
  padding: 35rpx 35rpx 96rpx 35rpx;
}

.layer-wrap .sel-box .sel-panel .hd {
  margin-bottom: 20rpx;
}

.layer-wrap .sel-box .sel-panel .hd text {
  display: flex;
  font-size: 24rpx;
  color: #1f1f1f;
}

.layer-wrap .sel-box .sel-panel .bd {
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.layer-wrap .sel-box .sel-panel .bd .item {
  display: flex;
  min-width: 106rpx;
  padding: 0 10rpx;
  height: 60rpx;
  font-size: 28rpx;
  color: #1f1f1f;
  border: 2rpx solid #cccccc;
  border-radius: 5rpx;
  align-items: center;
  justify-content: center;
 
}
.layer-wrap .sel-box .sel-panel .bd .item.checked{
  background: url(data:img/jpg;base64,) no-repeat right bottom/43rpx 41rpx;
  border-color: #f9821e;
}
.layer-wrap .sel-box .post {
  
}

.layer-wrap .sel-box .post textarea {
  border: 1rpx solid #e5e5e5;
  font-size: 22rpx;
  color: #666;
  width: auto;
  padding: 20rpx 20rpx;
}

.layer-wrap .sel-box .donate-btn {
  height: 96rpx;
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
}

.layer-wrap .sel-box .donate-btn button {
  background-color: #f86845;
  border-radius: 0;
  color: #fff;
  font-size: 32rpx;
  height: 100%;
  line-height: 100rpx;
  text-align: center;
}

.layer-wrap .sel-box .post {
  margin-bottom: 50rpx;
}

.layer-wrap .sel-box .post input {
  border: 1rpx solid #e5e5e5;
  font-size: 22rpx;
  color: #666;
  width: auto;
  padding: 10rpx;
}

.footer{
  text-align: center;
  color: #888;
  font-size: 26rpx;
  padding: 16rpx;
}
page{
  background-color: #f5f5f5;
}
.panel{
  max-width: 680rpx;
  background-color: #666;
  padding: 40rpx 20rpx;
 margin: 35rpx auto 0;
 border-radius: 4rpx;
}
.panel .hd{
  display: flex;
  background: url(data:image/png;base64,) no-repeat top 13rpx right/13rpx 22rpx;
}
.panel .hd .thumb{
  width: 220rpx;
  height: 165rpx;
  display: block;
  background-color: #f5f5f5;
}
.panel .hd .info{
  display: flex;
flex-direction: column;
margin-left: 20rpx;
}
.panel .hd .info .title{
  font-size: 30rpx;
  color: #fff;
  margin-bottom: 50rpx;
  max-width: 360rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.panel .hd .info .con{
  font-size: 24rpx;
  color: #fff;
  line-height: 30rpx;
  display: block;
  margin-bottom: 12rpx;
}
.panel .hd .info .con:last-child{
  margin-bottom:0; 
}
.panel .bd{
  margin-top: 30rpx;
}
.panel .bd .progress{
  display: flex;
  align-items: center;
  margin-bottom: 25rpx;
}
.panel .bd .progress .tag{
  background: #fff;
  width: 96rpx;
  height: 40rpx;
  font-size: 22rpx;
  color: #393939;
  line-height: 40rpx;
  text-align: center;
  flex-shrink: 0;
}
.panel .bd .progress .content{
  font-size: 24rpx;
  color: #fff;
  margin-left: 16rpx;
}
.panel .bd .more{
  position: relative;
}
.panel .bd .more .brief{
  font-size: 22rpx;
  color: #b7b7b7;
  line-height: 34rpx;
  display: block;
}
.panel .bd .more .more-btn{
  font-size: 22rpx;
    color: #b7b7b7;
    line-height: 34rpx;
    display: block;
    position: absolute;
    right: 0;
    bottom: 0; 
}

.donate-detail{
  max-width: 720rpx;
  background-color: #fff;
  margin: 20rpx auto 0;
  border-radius: 4rpx;
}
.donate-detail .title{
  padding:  0 20rpx;
  border-bottom: 2rpx solid #f5f5f5;
  font-size: 32rpx;
  color: #393939;
  height: 96rpx;
  line-height: 96rpx;
  display: block;
}
.donate-detail .section{
  height: 120rpx;
  padding: 0 20rpx;
    border-bottom: 2rpx solid #f5f5f5;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.donate-detail .section:last-child{
  border-bottom: 0;
}
.donate-detail .section .top{
  display: flex;
  justify-content: space-between;
}
.donate-detail .section .top .name{
  font-size: 26rpx;
  color:#666;
}
.donate-detail .section .top .money{
  font-size: 22rpx;
  color: #393939;
}
.donate-detail .section .date{
  font-size: 22rpx;
  color: #b6b6b6;
}
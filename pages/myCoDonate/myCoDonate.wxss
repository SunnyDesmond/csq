page{
  background-color: #f5f5f5;
}
.nav{
  height: 125rpx;
  display: flex;
  align-items: center;
justify-content: space-around;
background: #fff;
}
.nav .nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.nav .nav-item .num{
font-size: 32rpx;
color: #393939;
}
.nav .nav-item .title{
font-size: 24rpx;
color: #999;
}
.donate-list {
  background-color: #fff;
  border-top: 1rpx solid #f5f5f5;
}

.donate-list .list {
  padding: 30rpx;
  display: flex;
  border-bottom: 1rpx solid #f5f5f5;
  background: url(data:image/png;base64,) no-repeat center right 30rpx/13rpx 22rpx;
}

.donate-list .list .thumb {
  width: 200rpx;
  height: 150rpx;
  display: block;
  background-color: #f5f5f5;
}

.donate-list .list .info {
  margin-left: 22rpx;
  max-width: 415rpx;
}

.donate-list .list .info .title {
  font-size: 28rpx;
  color: #393939;
  display: block;
  line-height: 28rpx;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-bottom: 35rpx;
  margin-top: 13rpx;
}

.donate-list .list .info .con {
  font-size: 24rpx;
  display: flex;
  margin-bottom: 15rpx;
}

.donate-list .list .info .con:last-child {
  margin-bottom: 0;
}

.donate-list .list .info .con text {
  line-height: 30rpx;
  display: block;
}

.donate-list .list .info .con .label {
  color: #888;
}

.donate-list .list .info .con .val {
  color: #393939;
  line-height: 30rpx;
}
page{
  background-color: #f5f5f5;
}
.bg{
  width: 100%;
  height: 202rpx;

}
 image{
  width: 100%;
  height: 100%;
  display: block;
}

.invite-info{
  background-color: #fff;
  padding-top: 70rpx;
  padding: 70rpx 30rpx 30rpx 30rpx;
  position: relative;
  border-bottom: 2rpx solid #f5f5f5;
}

.invite-info .avatar{
  width: 140rpx;
  height: 140rpx;
  position: absolute;
  left: 50%;
  transform: translate(-50%,0);
  top: -70rpx;
  border-radius: 50%;
  overflow: hidden;
}
.invite-info .title{
  font-size: 30rpx;
  color: #393939;
  display: block;
  text-align: center;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.invite-info .article{
  font-size: 26rpx;
  color: #999;
}
.progress{
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
  height: 100rpx;
  background: #fff;
  align-items: center;
}
.progress .section{
  font-size: 28rpx;
  color: #393939;
}
.progress .section .s{
  color: #f8592d;
}
.helper-info{
  padding: 30rpx;
  margin-top: 20rpx;
  background-color: #fff;
  display: flex;
}
.helper-info .thumb{
  width: 240rpx;
  height: 180rpx;

}
.helper-info .detail{
  margin-left: 20rpx;
  max-width: 414rpx;
}
.helper-info .detail .title{
  display: block;
  overflow: hidden;
text-overflow: ellipsis;
white-space: nowrap;
font-size: 30rpx;
color: #333;
}
.helper-info .detail .con{
  font-size: 24rpx;
  color: #888;
  line-height: 30rpx;
  margin-top: 15rpx;
}
.helper-info .detail .con .s{
  color: #666;
}

.helper-info .detail .con .s-d{
  color: #666;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  overflow:hidden;

}
.ml-30{
  margin-left: 30rpx;
}

.join-wrap{
  height: 90rpx;
  padding: 0 33rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #393939;
  background-color: #fff;
  margin-top:20rpx; 
}
.join-wrap image{
  width: 28rpx;
  height: 28rpx;
  display: block;
  margin-right: 12rpx;
}
.btns{
  display: flex;
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #fff;
}
.btns text{
  flex: 1;
  height: 96rpx;
  line-height: 96rpx;
  text-align: center;font-size: 32rpx;
  color: #393939;
}
.btns text.ok{
  color: #fff;
  	background-color: #f8592d;
}
page {
  background-color: #efefef;
}

.banner {
  width: 100%;
}

.banner swiper {
  height: 360rpx;
}

.banner .slide-image {
  width: 100%;
  height: 100%;
  display: block;
}

.category {
  background-color: #fff;
  margin-top: 20rpx;
}

.category .nav-wrap {
  white-space: nowrap;
  border-bottom: 1rpx solid #efefef;
  width: 92%;
  margin: 0 auto;
}

.category .nav-wrap .nav {
  display: inline-flex;
  height: 110rpx;
  align-items: center;
  max-width: 118rpx;
  overflow: hidden;
  position: relative;
  margin-right: 50rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.category .nav-wrap .nav:last-child {
  margin-right: 0;
}

.category .nav-wrap .nav.s-cur {
  color: #f86845;
}

.category .nav-wrap .nav.s-cur:after {
  position: absolute;
  content: "";
  width: 100%;
  height: 4rpx;
  background-color: #f86845;
  left: 0;
  bottom: 0;
}

.category .nav-wrap .nav text {
  font-size: 28rpx;
  color: #393939;
}

.cate-list .list {
  padding: 30rpx 15rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.cate-list .list .top {
  display: flex;
}

.cate-list .list:last-child {
  border: none;
}

.cate-list .list .thumb {
  width: 280rpx;
  height: 157.5rpx;
  flex-shrink: 0;
  margin-left: 4rpx;
}

.cate-list .list .thumb image {
  width: 100%;
  height: 100%;
  background-color: #efefef;
}

.cate-list .list .info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 20rpx;
}

.cate-list .list .info .title {
  font-size: 30rpx;
  color: #333;
  line-height: 34rpx;
  max-height: 68rpx;
  overflow: hidden;
}

.cate-list .list .info .tag {
  font-size: 24rpx;
  color: #b7b7b7;
  margin-top: 30rpx;
  line-height: 30rpx;
}

.cate-list .list .info .love {
  font-size: 24rpx;
  color: #888;
  line-height: 30rpx;
  margin-top: 22rpx;
}

.cate-list .list .info .special {
  color: #393939;
}

.cate-list .list .progress {
  border-radius: 45rpx;
  overflow: hidden;
  margin-top: 30rpx;
}

.footer{
  text-align: center;
  color: #888;
  font-size: 26rpx;
  padding: 16rpx;
}
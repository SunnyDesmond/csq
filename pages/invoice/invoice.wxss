page {
  background-color: #f5f5f5;
}

.nav {
  height: 110rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.nav text {
  font-size: 30rpx;
  color: #393939;
  position: relative;
}

.nav text.cur:after {
  content: "";
  position: absolute;
  width: 100%;
  height: 6rpx;
  background-color: #888;
  left: 0;
  bottom: -35rpx;
}

.invoice-list {
  margin-top: 20rpx;
  padding: 0 15rpx;
}

.invoice-list-item {
  background-color: #fff;
  padding: 0 20rpx;
  margin-bottom: 12rpx;
}

.invoice-list-item .hd {
  height: 85rpx;
  border-bottom: 2rpx dotted #f5f5f5;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.invoice-list-item .hd:before {
  content: "";
  width: 24rpx;
  height: 24rpx;
  position: absolute;
  background-color: #f5f5f5;
  border-radius: 50%;
  left: -27rpx;
  bottom: -12rpx;
}

.invoice-list-item .hd:after {
  content: "";
  width: 24rpx;
  height: 24rpx;
  position: absolute;
  background-color: #f5f5f5;
  border-radius: 50%;
  right: -27rpx;
  bottom: -12rpx;
}

.invoice-list-item .hd .time {
  font-size: 24rpx;
  color: #666;
}

.invoice-list-item .hd .status {
  font-size: 24rpx;
}

.invoice-list-item .hd .ok {
  color: #0fd287;
}

.invoice-list-item .hd .wait {
  color: #ff8200;
}

.invoice-list-item .hd .back {
  color: #ff0303;
}

.invoice-list-item .bd {
  height: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding: 20rpx 0;
}

.invoice-list-item .bd .cell {
  display: flex;
  justify-content: space-between;
}

.invoice-list-item .bd .cell .name {
  font-size: 26rpx;
  color: #999;
}

.invoice-list-item .bd .cell .value {
  font-size: 28rpx;
  color: #393939;
}

.wait-list {

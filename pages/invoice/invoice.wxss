}

.wait-list .checkbox .top .name {
  color: #666;
  font-size: 28rpx;
}

.wait-list .checkbox .top .money {
  font-size: 26rpx;
  color: #393939;
}

.wait-list .checkbox  .date {
  font-size: 22rpx;
  color: #b6b6b6;

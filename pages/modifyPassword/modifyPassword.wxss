.query-wrap .query-item{
  margin:  0 30rpx;
  background-color: #fff;
  border-radius: 40rpx;
  overflow: hidden;
  border: 2rpx solid #e0e0e0;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center
}
.query-wrap .query-item input{
  height: 80rpx;
  font-size: 28rpx;
  color: #393939;
  padding: 0 30rpx;
  flex: 1
}
.query-wrap .query-btn{
  width: 680rpx;
  height: 90rpx;
  margin: 0 auto;
  border-radius:45rpx;
  border: none;
  background-color: #f8592d;
  color: #fff; 
  font-size: 32rpx;
  line-height: 90rpx;
  text-align: center;
}

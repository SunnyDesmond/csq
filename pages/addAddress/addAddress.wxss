page {
  background-color: #f5f5f5;
}

.form-wrap {

}

.form-wrap .item {
  padding: 15rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
  background-color: #fff;
}

.form-wrap .item .label {
  font-size: 28rpx;
  color: #393939;
  margin-bottom: 15rpx;
  font-weight: bold
}

.form-wrap .item input {
  font-size: 28rpx;
  color: #393939;
  width: 100%;
  margin-top: 20rpx;
}

.form-wrap .item.sel-address {
  padding: 0 30rpx;
}

.form-wrap .item.sel-address .label {
  height: 90rpx;
  line-height: 90rpx;
  margin-bottom: 0;
  width: 100%;
  border-bottom: 1rpx solid #f5f5f5;
  background: url(data:image/png;base64,) no-repeat center right 30rpx/13rpx 22rpx;
}

.form-wrap .item.sel-address .label .key {
  float: left;
}

.form-wrap .item.sel-address .label .value {
  float: right;
  margin-right: 60rpx;
}

.form-wrap .item.sel-address input {
  padding: 15rpx 0;
}

.form-wrap .item.set-default {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.form-wrap .item.set-default .label {
  margin-bottom: 0;
}

.form-wrap .item.set-default switch {
  zoom: 0.8;
}

.submit-btn {
  width: 680rpx;
  height: 90rpx;
  margin: 62rpx auto 0;
}

.submit-btn button {
  background-color: #f8592d;
  border-radius: 45rpx;
  border: none;
  color: #fff;
  font-size: 32rpx;
}

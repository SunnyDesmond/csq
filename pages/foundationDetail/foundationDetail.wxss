page {
  background-color: #f5f5f5;
}

.banner {
  position: relative;
  height: 360rpx;
}

.banner image {
  width: 100%;
  height: 100%;
  display: block;
}

.banner .text-wrap {
  position: absolute;
  top: 64rpx;
  left: 29rpx;
}

.banner .text-wrap text {
  line-height: 30rpx;
  display: block;
  color: #fff;
}

.fullbg{
  position: absolute;
  width: 100%;
  height: 360rpx;
  top:0;
  background: rgba(0, 0, 0, 0.2);

}

.banner .text-wrap .chz {
  font-size: 40rpx;
}

.foundation-info {
  background-color: #fff;
}

.foundation-info .detail {
  padding: 26rpx 60rpx;
  display: flex;
  justify-content: space-between;
}

.foundation-info .detail .item text {
  display: block;
  line-height: 30rpx;
}

.foundation-info .detail .item .name {
  font-size: 22rpx;
  color: #999;
}

.foundation-info .detail .item .value {
  font-size: 28rpx;
  color: #393939;
  margin-top: 15rpx;
}

.introduce-wrap {
  padding-left: 34rpx;
}

.introduce-wrap .item {
  border-bottom: 2rpx solid #f5f5f5;
  font-size: 26rpx;
  min-height: 82rpx;
  display: flex;
  align-items: center;
  background: url(data:image/png;base64,) no-repeat center right 30rpx/13rpx 22rpx;
}
.introduce-wrap .item.no-arrow{
  background: none;
}
.introduce-wrap .item.no-arrow  text{
  display: inline;
  font-size: 26rpx;
}
.introduce-wrap .item.no-arrow .key{
  color: #999;
}
.introduce-wrap .item.no-arrow .val{
  color: #393939;
}
.introduce-wrap .item:active {
  background-color: rgba(0, 0, 0, 0.1);
}

.introduce-wrap .item text {
  display: inline-block;
}

.introduce-wrap .item .name {
  color: #999;
  flex-shrink: 0;
}

.introduce-wrap .item .value {
  color: #393939;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  max-width: 460rpx;
}

.members-wrap {
  background-color: #fff;
  margin-top: 20rpx;
  padding: 30rpx;
}

.members-wrap .title {
  font-size: 30rpx;
  position: relative;
  color: #393939;
  height: 32rpx;
  display: block;
  line-height: 32rpx;
}

.members-wrap .title:before {
  content: "";
  position: absolute;
  left: -24rpx;
  top: 0;
  width: 6rpx;
  height: 100%;
  background-color: #f8592d;
}

.members-wrap .member-list {
  margin-top: 25rpx;
}
.members-wrap .member-list .item{
  float: left;
  width: 216rpx;
  height: 120rpx;
  	background-color: #f9f9f9;
    display: flex;
align-items: center;
justify-content: center;
margin-right: 20rpx;
margin-bottom: 20rpx;
}
.members-wrap .member-list .item:nth-child(3n){
  margin-right: 0;
}
.members-wrap .member-list .item .avatar{
  width:  60rpx;
  height: 60rpx;
  display: block;
  background-color: #f8592d;
  flex-shrink: 0;
  margin-right: 16rpx;
}
.members-wrap .member-list .item .info text{
  display: block;
}
.members-wrap .member-list .item .info .name{
  font-size: 24rpx;
  color: #393939;
}
.members-wrap .member-list .item .info .position{
  font-size: 20rpx;
  color: #999;
}
.members-wrap .member-list:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}

.collection{
  position: absolute;
  bottom: 0rpx;
  display: flex;
  color: #fff;
  width: 710rpx;
  align-items: center;
  padding: 20rpx;
}

.collection image{
  width: 48rpx;
  height: 48rpx;
}

.collection .en {
  font-size: 28rpx;
  flex: 1
}